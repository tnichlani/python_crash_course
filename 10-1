file_name = 'learning_python.txt'

with open(file_name) as file_copy:
	contents = file_copy.read()
	print(contents)

file_name = 'learning_python.txt'

with open(file_name) as file_copy:
	lines = file_copy.readlines()
for line in lines:
	print(line.rstrip())

file_name = 'learning_python.txt'
with open(file_name) as file_copy:
	lines = file_copy.readlines()

python_string = ' '

for line in lines:
	python_string +=line.strip()

print(python_string)
print(len(python_string))




