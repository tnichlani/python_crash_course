sandwich_orders = ['pastrami' , 'pesto' , 'veggie']

finished_sandwiches = []

while sandwich_orders:
	current_orders = sandwich_orders.pop()
	print("Your " + current_orders.title() + ' sandwich is being prepared.')
	finished_sandwiches.append(current_orders)

print('\n')

for sandwich in finished_sandwiches:
	print("Your " + sandwich.title() + " sandwich is now ready!" ) 
	

